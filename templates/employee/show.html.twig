{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ employee.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Worktitle</th>
                <td>{{ employee.worktitle }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ employee.salary }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_employee_index') }}">back to list</a>
    {% if app.user.roles[0] == 'ROLE_ADMIN' %}
        <a class="btn btn-primary" href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
        {{ include('employee/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
