{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

{# Redirect pokud je uzivatel prihlaseny #}
{% if app.user %}
    <script> window.location.href = "{{ path('app_home') }}";</script>
{% endif %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h1>Prihlaseni</h1>

<form action="{{ path('app_login') }}" method="post">
  <div class="mb-3">
    <label class="form-label required" for="email">Email</label>
    <input type="email" name="_username" value="{{ last_username }}" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="mb-3">
    <label class="form-label required" for="password">Heslo</label>
    <input type="password" class="form-control" id="password" name="_password">
  </div>
  <button type="submit" class="btn btn-primary">Prihlasit</button>
</form>
{% endblock %}
